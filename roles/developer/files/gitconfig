[push]
	default = simple
	followTags = true
[user]
	name = Paul Bovbel
	email = paul@bovbel.com
	signingkey = C909503D45A2E375
[credential]
	helper = cache
[core]
	editor = nano
	excludesfile = ~/.gitignore
[merge]
	tool = meld
[alias]
	co = checkout
	pull = pull --rebase --prune
	up = pull --rebase --prune
	rebase = rebase --gpg-sign=paul@bovbel.com
	rb = rebase
	cob = checkout -b
	commit = commit -S
	cm = !git add -u && git commit -S -m
	cmnew = !git add -A && git commit -S -m
	pushb = push -u origin
	bclean = "!f() { git branch --merged ${1-master} | grep -v \" ${1-master}$\" | xargs -r git branch -d; }; f"
	bdone = "!f() { git checkout ${1-master} && git up && git bclean ${1-master}; }; f"
	fixup = !git add -u && git commit -S --amend
[gpg]
	program = gpg2
